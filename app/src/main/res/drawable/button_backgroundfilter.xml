<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Button Shape -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="25dp"/> <!-- Rounded Corners -->
            <solid android:color="#4A90E2"/> <!-- Primary Blue -->
        </shape>
    </item>

    <!-- White Diagonal Cut -->
    <item>
        <rotate android:fromDegrees="320">
            <shape android:shape="rectangle">
                <solid android:color="#FFFFFF"/>
            </shape>
        </rotate>
    </item>

</layer-list>
